@using AppLogic.Dto
@model List<ReadStockPosition> 
@{
	ViewBag.Title = "Index";
	//Layout = "~/View/Shared/_Layout.cshtml";
	Layout = @"~\Views\Shared\_Layout.cshtml";
}

<div class="jumbotron">
    <h1>Складские запасы</h1>
</div>

<center>
	<table class="table table-hover table-light">
		<thead>
			<tr>
				<th scope="col">№</th>
				<th scope="col">Trade Mark</th>
				<th scope="col">Name</th>
				<th scope="col">Category</th>
				<th scope="col">Bottle Capacity</th>
				<th scope="col">Quantity</th>
			</tr>
		</thead>
		<tbody>
			@{int i = 1;
				foreach (var item in Model)
				{
					item.
					<tr>
						<th scope="row">@i</th>
						<td>@item.BeerBottle.BeerEntity.TradeMark.Name</td>
						<td>@item.BeerBottle.BeerEntity.Name</td>
						<td>@item.BeerBottle.BeerEntity.BeerKind.Name</td>
						<td>@item.BeerBottle.Capacity.Cap</td>
						<td>@item.BottleCount</td>
						<td><p><a href="/Home/InBasket/@item.ID">В корзину</a></p></td>
					</tr>
					//    Console.WriteLine($"{item.BeerBottle.BeerEntity.TradeMark.Name} 
					//		{ item.BeerBottle.BeerEntity.Name}, 
					//{ item.BeerBottle.BeerEntity.BeerKind.Name} - 
					//			{item.BeerBottle.Capacity.Cap}l -
					//				{ item.BottleCount} шт.");
					i++;
				}
			}
		</tbody>
	</table>
</center>


